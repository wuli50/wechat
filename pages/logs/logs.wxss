.background{
  width: 100%;
  padding: 0;
  position: relative;
}
.background .backgimg{
  width:calc(100% + 16rpx);
  margin-left: -8rpx;
}
.background .head_title{
  position: absolute;
  display: inline-block;
  width: 100%;
  text-align: center;
  color: white;
  top: 30rpx;
  font-size: 35rpx;
  font-weight: 550;
}
.vip{
  position: absolute;
  display: inline-block;
  width: 30%;
  left: 35%;
  text-align: center;
  top: 100rpx;
  font-size: 30rpx;
  color: orange;
  background-color: white;
  border-radius: 15rpx;
}
/*轮播  */
.header_swiper{
  position: absolute;
  width: 100%;
  top: 180rpx; 
}
.swiper-box{
  width: 100%;
  overflow: hidden;
  display: flex;

}
.swiper-box .img_box{
  width: calc(( 100% / 3)-40rpx);
  overflow: hidden;
  height: 224rpx;
  margin: 10rpx 40rpx;
  box-shadow: 5rpx 5rpx 10rpx #999; 
}
/*图书预览*/
.book_main{
  width: calc( 100% - 40rpx);
  padding: 20rpx 20rpx 100rpx;
  /* overflow-x:auto; */
  display: flex;
  flex-wrap: wrap;
}
.book_main .book{
  width: calc((100% / 3) - 40rpx);
  margin: 20rpx 20rpx;
  overflow: hidden;
  font-size: 25rpx;
}
.book_main .book_img{
  width: 100%;
  height: 250rpx;
}
.book_main .price{
  display: block;
  margin: 8rpx 0 10rpx;
  color: #999;
}
.book_main .book .play{
  background-color: white;
  border: 1px solid red;
  color: red;
  font-size: 25rpx;
}
.book_main .book .start view{
  display: inline-block;
  margin-top: 15rpx;
  overflow: hidden；

}
/*底部*/
.footer{
  position: fixed;
  bottom: 0px;
  height: 100rpx;
  width: 100%;
  background-image: linear-gradient(to bottom, rgba(0,0,0,0),rgba(255,255,255,0.5),#fff,#fff)
}
.footer .icon{
  background-color: white;
  padding: 15rpx 20rpx 12rpx;
  border-radius: 50%;
  position: absolute;
  box-shadow: 5rpx 0rpx 10rpx #aaa;
}
.footer .kefu{
  left: 40rpx;
}
.footer .my{
  right: 160rpx;
}
.footer .book{
  right: 40rpx;
}

